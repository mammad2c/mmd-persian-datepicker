{
  "name": "mmd-persian-datepicker",
  "version": "0.1.106",
  "description": "A pure js persian datepicker, powered by TypeScript :)",
  "keywords": [
    "datepicker",
    "calendar",
    "persian",
    "jalali",
    "farsi",
    "persian datepicker",
    "jalali datepicker",
    "persian calendar"
  ],
  "main": "dist/mmd-persian-datepicker.umd.js",
  "module": "dist/mmd-persian-datepicker.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Mohammad Toosi m_dd@rogers.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mammad2c/mmd-persian-datepicker",
    "directory": "packages/mmd-persian-datepicker"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist && rimraf .cache",
    "build": "tsc --module commonjs && cross-env NODE_ENV=production rollup -c rollup.config.ts",
    "start": "yarn prebuild && rollup -c rollup.config.ts -w",
    "start:example": "parcel example/index.html",
    "prepublish": "yarn build",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "lint-staged",
    "lint:js": "eslint --fix src/**/*.ts",
    "lint:styles": "stylelint --fix src/**/*.{css,scss,less,sass}"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint:js"
    ],
    "src/**/*.{css,scss,less,sass}": [
      "yarn lint:styles"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "peerDependencies": {
    "moment": "^2.26.0",
    "moment-jalaali": "^0.9.2"
  },
  "dependencies": {
    "moment": "^2.26.0",
    "moment-jalaali": "^0.9.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/moment-jalaali": "^0.7.4",
    "@types/node": "^14.0.12",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-config": "^26.0.1",
    "lint-staged": "^10.2.9",
    "node-sass": "^4.14.1",
    "parcel": "^1.12.4",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.15.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "stylelint": "^13.6.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
