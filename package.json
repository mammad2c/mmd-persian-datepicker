{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "lint": "lint-staged",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,css,scss,less,sass,md,json}"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
